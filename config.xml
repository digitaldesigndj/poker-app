<?xml version='1.0' encoding='utf-8'?>
<widget id="com.hyprtxt.poker" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<name>VideoPoker</name>
	<description>
		My first phone app, Video Poker
	</description>
	<author email="taylor@hyprtxt.com" href="http://hyprtxt.com">
		Hyprtxt
	</author>
	<content src="index.html" />
	<access origin="*" />
	<icon src="icons/icon.png" />
	<preference name="DisallowOverscroll" value="true" />
	<preference name="Fullscreen" value="true" />
	<preference name="Orientation" value="landscape" />
	<preference name="BackgroundColor" value="0xff00ccff"/>
	<platform name="ios">
		<!-- iOS 7.0+ -->
		<!-- iPhone / iPod Touch  -->
		<icon src="www/res/ios/poker-60.png" width="60" height="60" />
		<icon src="www/res/ios/poker-60@2x.png" width="120" height="120" />
		<!-- iPad -->
		<icon src="www/res/ios/poker-76.png" width="76" height="76" />
		<icon src="www/res/ios/poker-76@2x.png" width="152" height="152" />
		<!-- iOS 6.1 -->
		<!-- Spotlight Icon -->
		<icon src="www/res/ios/poker-40.png" width="40" height="40" />
		<icon src="www/res/ios/poker-40@2x.png" width="80" height="80" />
		<!-- iPhone / iPod Touch -->
		<icon src="www/res/ios/poker.png" width="57" height="57" />
		<icon src="www/res/ios/poker@2x.png" width="114" height="114" />
		<!-- iPad -->
		<icon src="www/res/ios/poker-72.png" width="72" height="72" />
		<icon src="www/res/ios/poker-72@2x.png" width="144" height="144" />
		<!-- iPhone Spotlight and Settings Icon -->
		<icon src="www/res/ios/poker-small.png" width="29" height="29" />
		<icon src="www/res/ios/poker-small@2x.png" width="58" height="58" />
		<!-- iPad Spotlight and Settings Icon -->
		<icon src="www/res/ios/poker-50.png" width="50" height="50" />
		<icon src="www/res/ios/poker-50@2x.png" width="100" height="100" />

	</platform>
</widget>